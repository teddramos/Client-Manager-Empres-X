@model IEnumerable<Client_Manager_Empres_X.Models.Cliente>

@{
    ViewData["Title"] = "Index";
}

<h1>Clientes</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre_Completo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre_Completo)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit","Cliente", new { id=item.id }, htmlAttributes: new { @class = "btn btn-secondary" }) 
                @Html.ActionLink("Direcciones", "Details","Cliente", new { id=item.id }, htmlAttributes: new { @class = "btn btn-warning" }) 
            
            </td>
        </tr>
}
    </tbody>
</table>
<input type="hidden" class="btn btn-warning" />